
@{
    ViewBag.Title = "Index";
}

<div class="row">
	<div class="col-md-8">
		
	</div>
	<div class="col-md-4">
		<div class="card">
			<div class="card-header">My portions today</div>
			<div class="card-body">
				<canvas id="chart-portions"></canvas>
			</div>
		</div>
	</div>
</div>

@section scripts {

	<script type="text/javascript">
		var ctx = $('#chart-portions');
		var myPieChart = new Chart(ctx, {
			type: 'pie',
			data: {
				labels: ["Starchy Carbs", "Fruit and Veg", "Protien", "Dairy", "Fats"],
				datasets: [{
					label: 'Portions eaten today',
					data: [5, 6, 2, 1, 1],
					backgroundColor: [
						'rgba(255, 99, 132, 0.2)',
						'rgba(54, 162, 235, 0.2)',
						'rgba(255, 206, 86, 0.2)',
						'rgba(75, 192, 192, 0.2)',
						'rgba(153, 102, 255, 0.2)'
					],
					borderColor: [
						'rgba(255,99,132,1)',
						'rgba(54, 162, 235, 1)',
						'rgba(255, 206, 86, 1)',
						'rgba(75, 192, 192, 1)',
						'rgba(153, 102, 255, 1)'
					],
					borderWidth: 1
				}]
			}
		});
	</script>	
	
}